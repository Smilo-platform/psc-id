<?xml version='1.0' encoding='utf-8'?>
<widget id="foundation.smilo.psc" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PSC-ID</name>
    <description>
        A private smart contract ID dApp for mobile and web.
    </description>
    <author email="info@smilo.foundation" href="https://smilo.foundation">
        Smilo Foundation Developers
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <hook src="scripts/build.sh" type="before_prepare" />
</widget>
